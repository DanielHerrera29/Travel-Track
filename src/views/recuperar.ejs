<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperar Contraseña - Travel Track</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#0f172a',
                        accent: '#3b82f6',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-white flex items-center justify-center min-h-screen">
    <div class="w-full max-w-md p-8 bg-white rounded-xl shadow-2xl">
        <!-- Logo/Título -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-primary mb-2">Travel Track</h1>
            <p class="text-gray-600">Recuperar contraseña</p>
        </div>

        <!-- Mensajes del servidor -->
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg">
            <p class="text-red-600 text-sm"><%= error %></p>
        </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
        <div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-lg">
            <p class="text-green-600 text-sm"><%= success %></p>
        </div>
        <% } %>

        <!-- Información -->
        <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
            <p class="text-blue-800 text-sm">
                <strong>Nota:</strong> Ingresa tu correo electrónico y tu nueva contraseña. 
                Esta función actualiza tu contraseña directamente sin envío de correo.
            </p>
        </div>

        <!-- Formulario -->
        <form id="forgotPasswordForm" class="flex flex-col gap-4">
            <div>
                <label class="block text-gray-700 mb-2 font-medium">Correo electrónico</label>
                <input 
                    type="email" 
                    id="correo" 
                    name="correo" 
                    placeholder="correo@ejemplo.com" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all">
            </div>
            
            <div>
                <label class="block text-gray-700 mb-2 font-medium">Nueva contraseña</label>
                <input 
                    type="password" 
                    id="nuevaContrasena" 
                    name="nuevaContrasena" 
                    placeholder="Mínimo 6 caracteres" 
                    required
                    minlength="6"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all">
            </div>

            <div>
                <label class="block text-gray-700 mb-2 font-medium">Confirmar contraseña</label>
                <input 
                    type="password" 
                    id="confirmarContrasena" 
                    name="confirmarContrasena" 
                    placeholder="Repite la contraseña" 
                    required
                    minlength="6"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all">
            </div>

            <!-- Mensaje de error del formulario -->
            <div id="errorMessage" class="hidden p-4 bg-red-50 border border-red-200 rounded-lg">
                <p class="text-red-600 text-sm" id="errorText"></p>
            </div>

            <!-- Mensaje de éxito -->
            <div id="successMessage" class="hidden p-4 bg-green-50 border border-green-200 rounded-lg">
                <p class="text-green-600 text-sm" id="successText"></p>
            </div>

            <button 
                type="submit"
                id="submitBtn"
                class="w-full px-4 py-3 bg-accent text-white rounded-lg font-semibold hover:bg-blue-600 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                Cambiar Contraseña
            </button>
        </form>

        <!-- Enlaces adicionales -->
        <div class="mt-6 text-center">
            <a href="/login" class="text-sm text-accent hover:underline">← Volver al inicio de sesión</a>
        </div>
        
        <div class="mt-4 text-center">
            <p class="text-gray-600 text-sm">
                ¿No tienes cuenta? 
                <a href="/register" class="text-accent hover:underline font-medium">Regístrate aquí</a>
            </p>
        </div>
    </div>

    <!-- Script para manejar el cambio de contraseña -->
    <script>
        const form = document.getElementById('forgotPasswordForm');
        const submitBtn = document.getElementById('submitBtn');
        const errorMessage = document.getElementById('errorMessage');
        const errorText = document.getElementById('errorText');
        const successMessage = document.getElementById('successMessage');
        const successText = document.getElementById('successText');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Ocultar mensajes previos
            errorMessage.classList.add('hidden');
            successMessage.classList.add('hidden');

            // Obtener datos del formulario
            const correo = document.getElementById('correo').value;
            const nuevaContrasena = document.getElementById('nuevaContrasena').value;
            const confirmarContrasena = document.getElementById('confirmarContrasena').value;

            // Validar que las contraseñas coincidan
            if (nuevaContrasena !== confirmarContrasena) {
                errorText.textContent = 'Las contraseñas no coinciden';
                errorMessage.classList.remove('hidden');
                return;
            }

            // Validar longitud mínima
            if (nuevaContrasena.length < 6) {
                errorText.textContent = 'La contraseña debe tener al menos 6 caracteres';
                errorMessage.classList.remove('hidden');
                return;
            }

            // Deshabilitar botón
            submitBtn.disabled = true;
            submitBtn.textContent = 'Cambiando contraseña...';

            try {
                // Hacer petición al API
                const response = await fetch('/api/auth/forgot-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ correo, nuevaContrasena })
                });

                const data = await response.json();

                if (data.success) {
                    // Mostrar mensaje de éxito
                    successText.textContent = '✓ Contraseña actualizada exitosamente. Redirigiendo al login...';
                    successMessage.classList.remove('hidden');
                    
                    // Limpiar formulario
                    form.reset();
                    
                    // Redirigir al login después de 2 segundos
                    setTimeout(() => {
                        window.location.href = '/login';
                    }, 2000);
                } else {
                    // Mostrar error
                    errorText.textContent = data.message || 'Error al cambiar la contraseña';
                    errorMessage.classList.remove('hidden');
                    
                    // Rehabilitar botón
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Cambiar Contraseña';
                }
            } catch (error) {
                console.error('Error:', error);
                errorText.textContent = 'Error de conexión. Por favor intenta de nuevo.';
                errorMessage.classList.remove('hidden');
                
                // Rehabilitar botón
                submitBtn.disabled = false;
                submitBtn.textContent = 'Cambiar Contraseña';
            }
        });
    </script>
</body>
</html>