<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Registrarse' %> - Travel Track</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#0f172a',
                        accent: '#3b82f6',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-white flex items-center justify-center min-h-screen py-8">
    <div class="w-full max-w-md p-8 bg-white rounded-xl shadow-2xl">
        <!-- Logo/Título -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-primary mb-2">Travel Track</h1>
            <p class="text-gray-600">Crea tu cuenta de cliente</p>
        </div>

        <!-- Formulario -->
        <form id="registerForm" class="flex flex-col gap-4">
            <div>
                <label class="block text-gray-700 mb-2 font-medium">Nombre completo *</label>
                <input 
                    type="text" 
                    id="nombre" 
                    name="nombre" 
                    placeholder="" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all">
            </div>

            <div>
                <label class="block text-gray-700 mb-2 font-medium">Cédula</label>
                <input 
                    type="text" 
                    id="cedula" 
                    name="cedula" 
                    placeholder="" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all">
            </div>

            <div>
                <label class="block text-gray-700 mb-2 font-medium">Correo electrónico *</label>
                <input 
                    type="email" 
                    id="correo" 
                    name="correo" 
                    placeholder="" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all">
            </div>

            <div>
                <label class="block text-gray-700 mb-2 font-medium">Teléfono</label>
                <input 
                    type="tel" 
                    id="telefono" 
                    name="telefono" 
                    placeholder="" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all">
            </div>
            
            <div>
                <label class="block text-gray-700 mb-2 font-medium">Contraseña *</label>
                <input 
                    type="password" 
                    id="contrasena" 
                    name="contrasena" 
                    placeholder="" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all">
            </div>

            <div>
                <label class="block text-gray-700 mb-2 font-medium">Confirmar contraseña *</label>
                <input 
                    type="password" 
                    id="confirmarContrasena" 
                    name="confirmarContrasena" 
                    placeholder="" 
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent transition-all">
            </div>

            <!-- Mensaje de error -->
            <% if (error) { %>
            <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
                <p class="text-red-600 text-sm"><%= error %></p>
            </div>
            <% } %>

            <div id="errorMessage" class="hidden p-4 bg-red-50 border border-red-200 rounded-lg">
                <p class="text-red-600 text-sm" id="errorText"></p>
            </div>

            <!-- Mensaje de éxito -->
            <div id="successMessage" class="hidden p-4 bg-green-50 border border-green-200 rounded-lg">
                <p class="text-green-600 text-sm" id="successText"></p>
            </div>

            <button 
                type="submit"
                id="submitBtn"
                class="w-full px-4 py-3 bg-accent text-white rounded-lg font-semibold hover:bg-blue-600 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                Registrarse
            </button>
        </form>

        <!-- Enlaces adicionales -->
        <div class="mt-6 text-center">
            <p class="text-gray-600 text-sm">
                ¿Ya tienes cuenta? 
                <a href="/login" class="text-accent hover:underline font-medium">Inicia sesión aquí</a>
            </p>
        </div>

        <!-- Volver al inicio -->
        <div class="mt-4 text-center">
            <a href="/" class="text-sm text-gray-500 hover:text-accent transition-colors">
                ← Volver al inicio
            </a>
        </div>
    </div>

    <!-- Script para manejar el registro -->
    <script>
        const form = document.getElementById('registerForm');
        const submitBtn = document.getElementById('submitBtn');
        const errorMessage = document.getElementById('errorMessage');
        const errorText = document.getElementById('errorText');
        const successMessage = document.getElementById('successMessage');
        const successText = document.getElementById('successText');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Deshabilitar botón
            submitBtn.disabled = true;
            submitBtn.textContent = 'Registrando...';
            
            // Ocultar mensajes previos
            errorMessage.classList.add('hidden');
            successMessage.classList.add('hidden');

            // Obtener datos del formulario
            const nombre = document.getElementById('nombre').value.trim();
            const cedula = document.getElementById('cedula').value.trim();
            const correo = document.getElementById('correo').value.trim();
            const telefono = document.getElementById('telefono').value.trim();
            const contrasena = document.getElementById('contrasena').value;
            const confirmarContrasena = document.getElementById('confirmarContrasena').value;

            // Validar contraseñas
            if (contrasena !== confirmarContrasena) {
                errorText.textContent = 'Las contraseñas no coinciden';
                errorMessage.classList.remove('hidden');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Registrarse';
                return;
            }

            // Validar longitud de contraseña
            if (contrasena.length < 6) {
                errorText.textContent = 'La contraseña debe tener al menos 6 caracteres';
                errorMessage.classList.remove('hidden');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Registrarse';
                return;
            }

            try {
                // Hacer petición al API
                const response = await fetch('/api/auth/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ 
                        nombre, 
                        cedula: cedula || null, 
                        correo, 
                        telefono: telefono || null, 
                        contrasena 
                    })
                });

                const data = await response.json();

                if (data.success) {
                    // Mostrar mensaje de éxito
                    successText.textContent = data.message + ' Redirigiendo...';
                    successMessage.classList.remove('hidden');
                    
                    // Redirigir al login después de 2 segundos
                    setTimeout(() => {
                        window.location.href = data.redirectUrl || '/login';
                    }, 2000);
                } else {
                    // Mostrar error
                    errorText.textContent = data.message || 'Error al registrar usuario';
                    errorMessage.classList.remove('hidden');
                    
                    // Rehabilitar botón
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Registrarse';
                }
            } catch (error) {
                console.error('Error:', error);
                errorText.textContent = 'Error de conexión. Por favor intenta de nuevo.';
                errorMessage.classList.remove('hidden');
                
                // Rehabilitar botón
                submitBtn.disabled = false;
                submitBtn.textContent = 'Registrarse';
            }
        });
    </script>
</body>
</html>